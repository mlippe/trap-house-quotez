---
import PlayerApp from '../layouts/PlayerApp.astro';
import Player from '../components/Player.astro';
import Quotes from '../components/Quotes.astro';
import data from '../data/data.json';
---

<PlayerApp title='Welcome to Astro.'>
  <main>
    <section class='banner card'>
      <div class='left'>
        <img src='icon/thk_logo.svg' alt='' />
        <h1 class='font-meta'>TrapHouseQuotez</h1>
      </div>
      <div class='right'><img src='icon/menu.svg' alt='' /></div>
    </section>

    <section class='content'>
      <Player />
      <Quotes data={data} />
    </section>

    <!-- <Card
        href='https://docs.astro.build/'
        title='Documentation'
        body='Learn how Astro works and explore the official API docs.'
      /> -->
  </main>
</PlayerApp>

<style>
  main {
    margin: auto;
    padding: 1.5rem;
    max-width: 100rem;
  }

  .banner {
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .banner .left {
    display: flex;
    gap: 1.25rem;
  }
</style>
