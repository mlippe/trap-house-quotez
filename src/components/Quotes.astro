---
export interface Props {
  data: Array<any>
}

const { data } = Astro.props
---

{
  data.map(function (episode, index) {
    return (
      <div class="quotes card">
        <div class="header">
          <img class="background" src={episode.imageSrc} alt="" />
          <img src={episode.imageSrc} alt="" />
          <a href={episode.videoLink} target="_blank">
            <h2 class="font-title-large">{episode.title}</h2>
            <img src="icon/external.svg" alt="" />
          </a>
        </div>
      </div>
    )
  })
}

<style>
  .quotes .header {
    display: flex;
    padding: 2rem;
    position: relative;
    gap: 42px;
    border-radius: 0.75rem 0.75rem 2rem 2rem;
    overflow: hidden;
  }

  .quotes .header > img {
    position: relative;
    width: 80px;
    height: 80px;
    border-radius: 0.75rem;
    z-index: 1;
  }

  .quotes .header > img.background {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    transform: scale(1.2);
    filter: blur(100px);
    transform-origin: center;
    z-index: 0;
  }

  .quotes .header a {
    display: flex;
    position: relative;
    z-index: 1;
    gap: 24px;
    align-items: center;
    text-decoration: none;
    text-decoration-color: white;
  }

  .quotes .header a:hover {
    text-decoration: underline;
  }

  .quotes .header a img {
    width: 18px;
    height: 18px;
  }
</style>
